<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAIDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAIDemo"
    Title="MauiAIDemo">

    <TabBar>
        <ShellContent
            Title="AI Chat"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="OCR"
            ContentTemplate="{DataTemplate local:OcrPage}"
            Route="OcrPage" />
        <ShellContent
    Title="ImagingPage"
    ContentTemplate="{DataTemplate local:ImagingPage}"
    Route="ImagingPage" />
    </TabBar>

</Shell>
