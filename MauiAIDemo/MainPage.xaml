<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAIDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="AI Chat Demo"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry
                x:Name="PromptEntry"
                Placeholder="Enter your prompt here..."
                Text="Provide the molecular formula for glucose."
                FontSize="16" />

            <Button
                x:Name="CounterBtn"
                Text="Ask AI" 
                SemanticProperties.Hint="Send prompt to AI"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <Label
                Text="Response:"
                FontAttributes="Bold"
                Margin="0,10,0,0" />

            <Border
                Stroke="{AppThemeBinding Light=Gray, Dark=LightGray}"
                StrokeThickness="1"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D30}"
                Padding="10"
                StrokeShape="RoundRectangle 5">
                <Editor
                    x:Name="ResponseEditor"
                    Placeholder="AI response will appear here..."
                    IsReadOnly="True"
                    MinimumHeightRequest="200"
                    FontSize="14"
                    
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    AutoSize="TextChanges" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
