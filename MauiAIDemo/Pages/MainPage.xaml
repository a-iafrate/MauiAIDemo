<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAIDemo.MainPage"
             Title="AI Chat">

    <Grid Padding="30,20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0"
               Text="AI Chat Demo"
               Style="{StaticResource Headline}"
               HorizontalOptions="Center"
               SemanticProperties.HeadingLevel="Level1" />

        <!-- Prompt Input -->
        <Entry Grid.Row="1"
               x:Name="PromptEntry"
               Placeholder="Enter your prompt here..."
               Text="Provide the molecular formula for glucose."
               FontSize="16"
               HorizontalOptions="Fill" />

        <!-- Ask AI Button -->
        <Button Grid.Row="2"
                x:Name="CounterBtn"
                Text="Ask AI" 
                SemanticProperties.Hint="Send prompt to AI"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

        <!-- Response Label -->
        <Label Grid.Row="3"
               Text="Response:"
               FontAttributes="Bold" />

        <!-- Response Area -->
        <Border Grid.Row="4"
                Stroke="{AppThemeBinding Light=Gray, Dark=LightGray}"
                StrokeThickness="1"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D30}"
                Padding="10"
                StrokeShape="RoundRectangle 5">
            <Editor x:Name="ResponseEditor"
                    Placeholder="AI response will appear here..."
                    IsReadOnly="True"
                    FontSize="14"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand" />
        </Border>

    </Grid>

</ContentPage>
